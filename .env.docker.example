# ==============================================
# NetFlow Analyzer - Docker Environment File
# ==============================================
# Copy this file to .env.docker and update values
# cp .env.docker.example .env.docker
# ==============================================

# Application Settings
APP_NAME="NetFlow Analyzer"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://YOUR_SERVER_IP:8003
APP_KEY=

# Ports
APP_PORT=8003
NETFLOW_PORT=2055

# Database (PostgreSQL)
DB_DATABASE=netflow_traffic_analyzer
DB_USERNAME=netflow_user
DB_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD
DB_EXTERNAL_PORT=5433

# Admin User (required for initial setup)
ADMIN_NAME=Administrator
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD

# WebSocket (Laravel Reverb) - generate secure random values
REVERB_APP_ID=netflow-analyzer
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# GeoIP (optional - for geolocation features)
MAXMIND_LICENSE_KEY=

# Mail Configuration (for password reset - optional)
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="${APP_NAME}"
