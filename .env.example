APP_NAME="NetFlow Analyzer"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# Database - PostgreSQL (update with your credentials)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=netflow_traffic_analyzer
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_password_here

SESSION_DRIVER=file
SESSION_LIFETIME=120

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=file

# Laravel Reverb (WebSocket)
REVERB_APP_ID=netflow-analyzer
REVERB_APP_KEY=netflow-key
REVERB_APP_SECRET=netflow-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Vite (for WebSocket client)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# NetFlow Configuration (configure these for your environment)
NETFLOW_PORT=
NETFLOW_COLLECTOR_IP=
NETFLOW_RETENTION_DAYS=7
NETFLOW_AGGREGATION_ENABLED=true

# Sanctum (for API authentication)
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# Mail Configuration (required for password reset)
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"
