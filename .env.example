APP_NAME="NetFlow Analyzer"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://your-domain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# Database - PostgreSQL (update with your credentials)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=netflow_traffic_analyzer
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_password_here

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# Admin User (required for initial setup via php artisan db:seed)
ADMIN_NAME=Administrator
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=

# Laravel Reverb (WebSocket) - generate secure random values for production
REVERB_APP_ID=netflow-analyzer
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=https

# Vite (for WebSocket client)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# NetFlow Configuration
NETFLOW_PORT=2055
NETFLOW_COLLECTOR_IP=
NETFLOW_RETENTION_DAYS=7
NETFLOW_AGGREGATION_ENABLED=true

# Sanctum (for API authentication) - update with your production domains
SANCTUM_STATEFUL_DOMAINS=your-domain.com

# Mail Configuration (required for password reset)
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# MaxMind GeoIP2 (optional - for geolocation features)
MAXMIND_LICENSE_KEY=
